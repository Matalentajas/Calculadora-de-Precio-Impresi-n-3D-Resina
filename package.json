{
  "name": "calculadora-precios-3d",
  "version": "2.0.0",
  "description": "Calculadora profesional de costes para impresiÃ³n 3D - Resina y Filamento",
  "author": {
    "name": "Artur",
    "email": "tu-email@ejemplo.com"
  },
  "license": "MIT",
  "main": "main.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "homepage": "./",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean": "rimraf dist node_modules/.vite",
    "electron": "electron .",
    "electron:dev": "npm run dev & electron .",
    "app:build": "npm run build && electron-builder",
    "app:dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "rimraf": "^6.0.1",
    "terser": "^5.43.1",
    "vite": "^7.0.4"
  },
  "build": {
    "appId": "com.calculadora3d.app",
    "productName": "Calculadora 3D",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "compression": "maximum",
    "win": {
      "target": {
        "target": "portable",
        "arch": ["x64"]
      },
      "requestedExecutionLevel": "asInvoker"
    },
    "portable": {
      "artifactName": "Calculadora-3D-Portable.exe"
    }
  }
}
